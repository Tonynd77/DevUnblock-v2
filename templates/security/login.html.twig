{% extends "base.html.twig" %}

{% block title %}
    Se connecter | DevUnblock
{% endblock %}

{% block body %}
    <h1 class="display-4 text-center mt-2">Identifiez-vous</h1>
    {% if error %}

        <p class="bg-danger text-white text-center p-2 col-md-2 mx-auto rounded">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </p>
        
    {% endif %}

    {% for message in app.flashes('success') %}
        
        <div class="col-md-4 mx-auto bg-success text-white rounded p-3 text-center mb-3">
            {{ message }}
        </div>

    {% endfor %}

    <form action="{{ path('security_login') }}" method="post" class="col-md-5 mx-auto">
        <div class="form-group">
            <label for="_username">Email</label>
            <input type="text" class="form-control" id="_username" name="_username" placeholder="Adresse email..."  {# value=" {{ lastEmail }} " #}>
        </div>
        <div class="form-group">
            <label for="_password">Mot de passe</label> 
            <input type="password" class="form-control" id="_password" name="_password" placeholder="Mot de passe..." required>
        </div>
        <input type="hidden" name="_target_path" value="/blog">
    <input type="submit" value="Se connecter" class="btn btn-color-blue">
    </form>
{% endblock %}